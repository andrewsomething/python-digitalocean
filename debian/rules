#!/usr/bin/make -f
# -*- makefile -*-
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export PYBUILD_NAME = digitalocean
export PYBUILD_TEST_PYTEST = 1
export PYBUILD_BEFORE_TEST=cp -r {dir}/digitalocean/tests {build_dir}
export PYBUILD_AFTER_TEST=rm -rf {build_dir}/digitalocean/tests
%:
	dh $@ --with python2,python3,sphinxdoc --buildsystem=pybuild
override_dh_auto_clean:
	dh_auto_clean
	rm -rf build
	rm -rf *.egg-info
override_dh_auto_build: export http_proxy=127.0.0.1:9
override_dh_auto_build: export https_proxy=127.0.0.1:9
override_dh_auto_build:
	dh_auto_build
	PYTHONPATH=. sphinx-build -N -bhtml docs/ build/html